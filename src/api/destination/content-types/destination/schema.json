{
  "kind": "collectionType",
  "collectionName": "destinations",
  "info": {
    "singularName": "destination",
    "pluralName": "destinations",
    "displayName": "Destinations",
    "description": "Informaci√≥n detallada sobre destinos de estudio y trabajo"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "region": {
      "type": "enumeration",
      "enum": [
        "northAmerica",
        "europe",
        "asia",
        "oceania",
        "africa"
      ],
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "overview": {
      "type": "component",
      "repeatable": false,
      "component": "overview.overview"
    },
    "statistics": {
      "type": "component",
      "repeatable": true,
      "component": "destination-statistics.statistic"
    },
    "travelTips": {
      "type": "component",
      "repeatable": true,
      "component": "travel-tips.tip"
    },
    "programs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::program.program",
      "mappedBy": "destinos"
    }
  }
}